@model PizzaShop.UI.Models.Topping

@{
    ViewData["Title"] = "RemoveTopping";
}

<h1>Remove Topping(s)</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RemoveTopping">
            <div>
                @foreach (string item in Model.toppingList)
                {
                    <div class="form-group">
                        <input asp-for="toppings[Model.toppingKeys[Model.toppingList.IndexOf(item)]]" type="checkbox" />
                        <text>@item</text>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Remove Topping(s)" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="AdminOptions" class="btn btn-primary">Back to Options</a>
</div>