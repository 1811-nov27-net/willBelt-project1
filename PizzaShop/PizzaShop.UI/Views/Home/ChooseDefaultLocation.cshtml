@model PizzaShop.UI.Models.LocationsList

@{
    ViewData["Title"] = "Location";
}

<h1>Choose A Default Location</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Location" method="post">
            <div class="form-group">
                <select asp-for="locationDescription" asp-items="Model.list" class="form-control"></select>
            </div>
            <div class="form-group">
                <br /><button type="submit" class="btn btn-primary">Select</button>
            </div>
        </form>
    </div>
</div>