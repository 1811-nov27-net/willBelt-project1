@model IList<PizzaShop.Library.UserClass>

@{
    ViewData["Title"] = "UserSearchResults";
}

<h1>User Search Results</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                User ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Default Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultLocation.LocationDescription)
            </td>
            <td>
                @Html.ActionLink("Order History", "UserDetails", new { id=item.UserID }) 
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="AdminOptions" class="btn btn-primary">Back to Options</a>
</div>