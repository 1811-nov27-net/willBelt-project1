@model PizzaShop.Library.OrderClass

@{
    ViewData["Title"] = "TimeCheckFailure";
}

<h1>Sorry, You cannot place another order to this location until at least 2 hours after your previous order</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.time)
        </dd>
        <dt class="col-sm-2">
            Customer:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customer.FirstName) @Html.DisplayFor(model => model.customer.LastName)
        </dd>
        <dt class="col-sm-2">
            Location:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.location.LocationDescription)
        </dd>
        <dt class="col-sm-2">
            Order:
        </dt>
        <dd class="col-sm-10">
            @{ foreach (var pizza in Model.pizzas)
                {

                    @Html.DisplayFor(model => pizza.PizzaString)
                    <br />
                }
            }
        </dd>
        <dt class="col-sm-2">
            Total:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.total)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Location" class="btn btn-primary">Select Another Location</a>
</div>
