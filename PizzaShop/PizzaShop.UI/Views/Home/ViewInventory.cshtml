@model PizzaShop.UI.Models.Inventory

@{
    ViewData["Title"] = "ViewInventory";
}

<h1>ViewInventory</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i < Model.ToppingNames.Count; i++) {
        <tr>
            <td>
                <text>@Model.ToppingNames[i] : @Model.ToppingStock[i]</text>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="AdminOptions" class="btn btn-primary">Back to Options</a>
</div>