@model PizzaShop.UI.Models.LocationsList

@{
    ViewData["Title"] = "Location";
}

<h1>Location</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="AdminLocationPicker" method="post">
            <div class="form-group">
                <select asp-for="locationDescription" asp-items="Model.list" class="form-control"></select>
            </div>
            <div class="form-group">
                <br /><button type="submit" class="btn btn-primary">Select</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="AdminOptions" class="btn btn-primary">Back to Options</a>
</div>
